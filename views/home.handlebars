<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>Orchestrate User Authentication</h1>
    <p>Below is your profile information!</p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>Username: {{user.username}}</p>
      <p>Avatar: <img src="{{user.avatar}}"/></p>
    </div>
  </div>

{{else}}
<div class="splash-container">
  <div class="splash">
    <div class="splash-head">
      <img src="photos/shiftwhite.png" id="shiftlogo" alt="Null">
      <h1 class="splash-head-text">SHIFTABLE</h1>
    </div>
    <video autoplay loop poster="lhl.jpg" id="bgvid">
      <source src="../video/lhl.mp4" type="video/mp4">
    </video>
  </div>
</div>

<div class="content-wrapper">
  <div id="signup" class="content"><p class="title">Getting Started</p>
    <div id="local">
      &thinsp;&thinsp;&thinsp;&thinsp;<a data-toggle="collapse" href="#local-sign-in" class="btn btn-default btn-md" role="button">I already have an account</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&thinsp;
      <a data-toggle="collapse" href="#local-reg" class="btn btn-default btn-md" role="button">I need to make an account</a>
    </div>

    <form id="local-sign-in" class="form-inline collapse" action="/login" role="form" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="username" placeholder="Username" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">        
        <input type="password" class="form-control" name="password" placeholder="Password" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-sm" value="Log In"/>
      </div>
    </form>

    <form id="local-reg" class="form-inline collapse" action="/local-reg" role="form" method="post">
      <div class="form-group">
        <input type="text" name="username" class="form-control" name="username" placeholder="Username" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="text" name="username" class="form-control" name="first" placeholder="First Name" style="margin-bottom: 0.25em;" />
      </div>
       <div class="form-group">
        <input type="text" name="username" class="form-control" name="last" placeholder="Last Name" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="password" name="password"class="form-control"  name="password" placeholder="Password" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="text" name="company" class="form-control" name="company" placeholder="Company" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="text" name="city" class="form-control" name="city" placeholder="City" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="text" id="address" name="address" class="form-control" name="address" placeholder="Address" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="text" name="address" class="form-control" name="state" placeholder="Province" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group">
        <input type="text" name="address" class="form-control" name="role" placeholder="Role" style="margin-bottom: 0.25em;" />
      </div>
      <div class="form-group" id="map" style="height:200px; width: 200px"></div>
      <div>
        <input type="submit" class="btn btn-primary btn-sm" value="Register" style="margin-top: 0.25em;" />
      </div>
    </form>
  </div>
  <div class="l-box pure-u-1-3 pure-u-md-1-2 pure-u-lg-1-4" style="background-color:#2D3E50;"> 
    <h3 class="content-subhead">Mobile App Coming Soon!</h3>
    <div class="phone">
      <img id="phone" src="photos/shiftphone.png" border="0" alt="Null">
    </div>
  </div>
  <div id="contact_us" class="content">
    <div class="footer l-box is-center">
    Bridging the gap between employees.
    </div>
  </div>
</div>


<!-- {{/if}} -->
